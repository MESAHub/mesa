! note: set x_ctrl(7) to approximately expected period (in days). 

&star_job   
   set_initial_dt = .true.
   seconds_for_initial_dt = 1 ! start at ~ max/10
   !pgstar_flag = .true.
/ ! end of star_job namelist

&eos
/ !end of eos namelist

&kap
/ ! end of kap namelist

&controls   
   max_timestep = 10

! timesteps
   ! fyi: RSP_max_dt_times_min_dr_div_cs = 2d0
   !      ccsn uses dt_div_min_dr_div_cs_limit = 0.7d0, no hard limit
   dt_div_min_dr_div_cs_limit = 0.7d0 ! 1.0d0
   dt_div_min_dr_div_cs_hard_limit = 2.0d0
   
   
! output controls
   x_logical_ctrl(7) = .true. ! doing pulses
   x_integer_ctrl(7) = 0 ! 3 ! which period to check (<= 0 means don't check any)
   x_ctrl(7) = 0.7382 ! expected period (in days) 
!   x_ctrl(8) = 1d-1 ! min_deltaR_for_periods (Rsun)
   x_ctrl(9) = 0.1 ! KE_growth_avg_abs_frac_new
   x_ctrl(10) = 0.1 ! min_period_div_target

   !photo_interval = 100
   !profile_interval = 100
   !history_interval = 10
   !terminal_interval = 10

/ ! end of controls namelist

&pgstar

    !pause = .true.
    !pause_interval = 100
    pgstar_interval = 25

 ! window 1

    !Grid1_win_flag = .true.

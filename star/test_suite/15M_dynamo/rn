#!/bin/bash

# uncomment the following line to skip the optional inlists
# MESA_SKIP_OPTIONAL=t

# this provides the definition of do_one (run one part of test)
# do_one [inlist] [output model] [LOGS directory]
MESA_DIR=../../..
source "${MESA_DIR}/star/test_suite/test_suite_helpers"

date "+DATE: %Y-%m-%d%nTIME: %H:%M:%S"

# check if can skip building starting model
if [ -n "$MESA_SKIP_OPTIONAL" ]; then
   cp standard_zams.mod zams.mod
else
   do_one inlist_zams_header zams.mod
   cp zams.mod standard_zams.mod
fi

# check if can skip building he_burn model
if [ -n "$MESA_SKIP_OPTIONAL" ]; then
   cp standard_he_burn.mod he_burn.mod
else
   do_one inlist_to_he_burn_header he_burn.mod
   cp he_burn.mod standard_he_burn.mod
fi

do_one inlist_15M_dynamo_header final.mod

date "+DATE: %Y-%m-%d%nTIME: %H:%M:%S"

echo 'finished'


!  long-period RR Lyrae star: M=0.65Ms, L=60Ls, Teff=6500K, X=0.75, Z=0.0004

! original test case contributed by Radek Smolec.

&star_job
   saved_model_name = 'RR_Lyrae.mod'
   
   set_initial_dt = .true.
   seconds_for_initial_dt = 90 ! for debugging
   
/ ! end of star_job namelist

&eos
   use_Skye = .true.
/ ! end of eos namelist

&kap
   Zbase = 0.0004d0
   kap_file_prefix = 'a09'
   kap_lowT_prefix = 'lowT_fa05_a09p'
   kap_CO_prefix = 'a09_co'
/ ! end of kap namelist
   
&controls  
   initial_z = 0.0004d0
   initial_mass = 0.65d0

   !max_timestep = 100.18 ! seconds
   !max_age_in_days = 7.8764
   
   RSP_max_dt = 90 ! for debugging
   max_timestep = 90 ! for debugging
   force_timestep_min = 90 ! for debugging
   

! TDC

   TDC_alfa  =     1.5d0         ! mixing length; alfa = 0 gives a purely radiative model.
   TDC_alfap =     0.0d0         ! turbulent pressure; Pt ~ alfap     
   TDC_alfat =     0.0d0         ! turbulent flux; Lt ~ TDC_alfat
   TDC_alfam =     0.25d0        ! turbulent viscosity; Eq ~ TDC_alfam
   TDC_alfar =     0.0d0         ! radiative dissipation of turbulent energy; Dr ~ TDC_alfar   

   TDC_num_outermost_cells_forced_nonturbulent = 1
   TDC_num_innermost_cells_forced_nonturbulent = 5

! RSP

   !x_integer_ctrl(1) = 10 ! which period to check
   !x_ctrl(1) = 0.71262d0 ! expected period (in days) 

   RSP_mass = 0.65d0
   RSP_Teff = 6500d0
   RSP_L = 60d0
   RSP_X = 0.75d0
   RSP_Z = 0.0004d0

/ ! end of controls namelist


&pgstar
   Grid2_title = 'RR_Lyrae'
/ ! end of pgstar namelist
   


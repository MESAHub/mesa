! classical Cep.  similar to CEP-227 from Pilecki et al. 2013, MNRAS.
! M=    4.165 +/- 0.032
! Teff=  6050 +/-   160         logT = 3.78 +/- 0.01
! logL= 3.158 +/- 0.049 -> L = 1438.8
! [Fe/H]=??? (unknown)
! P_obs=3.7971d (F mode)

! original test case contributed by Radek Smolec.

&star_job
   load_model_filename = 'Cepheid.mod'
   
   set_initial_dt = .true.
   seconds_for_initial_dt = 500 ! for debugging
   
/ ! end of star_job namelist

&eos
   use_Skye = .true.
/ ! end of eos namelist

&kap
   Zbase = 0.007d0
   kap_file_prefix = 'a09'
   kap_lowT_prefix = 'lowT_fa05_a09p'
   kap_CO_prefix = 'a09_co'
/ ! end of kap namelist
   
&controls  
   initial_z = 0.007d0
   initial_mass = 4.165d0

   force_timestep = 1d3
   
! TDC
   max_dt_div_tau_conv_for_TDC = 1d99
   max_dt_years_for_TDC = 1d99

! RSP2

   !x_integer_ctrl(1) = 1 ! which period to check for test_suite
   !x_ctrl(1) = 3.85 ! expected period (in days) 

   mixing_length_alpha  =     1.5d0         ! mixing length; alfa = 0 gives a purely radiative model.
   RSP2_alfap =     0.0d0         ! turbulent pressure; Pt ~ alfap     
   RSP2_alfat =     0.0d0         ! turbulent flux; Lt ~ RSP2_alfat
   RSP2_alfam =     0.25d0        ! turbulent viscosity; Eq and Uq ~ RSP2_alfam
   RSP2_alfar =     0.0d0         ! radiative dissipation of turbulent energy; Dr ~ RSP2_alfar   

   RSP2_num_outermost_cells_forced_nonturbulent = 1
   RSP2_num_innermost_cells_forced_nonturbulent = 5
   
! solver

! solver
   steps_before_use_velocity_time_centering = 0
   use_P_d_1_div_rho_form_of_work_when_time_centering_velocity = .true.

   include_P_in_velocity_time_centering = .true.
   P_theta_for_velocity_time_centering = 0.66d0

   include_L_in_velocity_time_centering = .true.
   L_theta_for_velocity_time_centering = 0.66d0

   set_rho_to_dm_div_dV = .false.
   use_dedt_form_of_energy_eqn = .true.
   
   use_Pvsc_art_visc = .true.
   Pvsc_cq = 4.0d0 ! viscosity parameter (viscosity pressure proportional to cq)
   Pvsc_zsh = 0.1d0 ! "turn-on" compression in units of sound speed.

   eps_nuc_factor = 0
   non_nuc_neu_factor = 0
   dxdt_nuc_factor = 0
   mix_factor = 0

! RSP

   RSP_mass = 4.165d0
   RSP_Teff = 6050
   RSP_L = 1438.8d0
   RSP_X = 0.73d0
   RSP_Z = 0.007d0

/ ! end of controls namelist


&pgstar
   Grid2_title = 'Cepheid'
/ ! end of pgstar namelist
   


   


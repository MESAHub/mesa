! inlist_common

&star_job

   read_extra_star_job_inlist1 = .true.
   extra_star_job_inlist1_name = 'inlist_mass_Z'
 
   show_log_description_at_start = .false.

   change_initial_u_flag = .true.
   change_initial_v_flag = .true.
   new_v_flag = .false.
   new_u_flag = .true.

   set_initial_age = .true.
   initial_age = 0

   set_initial_model_number = .true.
   initial_model_number = 0

   set_initial_number_retries = .false.
   
   pgstar_flag = .true.

/ ! end of star_job namelist

&eos
   use_Skye = .true.
   use_PC = .false.
/ ! end of eos namelist

&kap
   read_extra_kap_inlist1 = .true.
   extra_kap_inlist1_name = 'inlist_mass_Z'
/ ! end of kap namelist

&controls

   read_extra_controls_inlist1 = .true.
   extra_controls_inlist1_name = 'inlist_mass_Z'

! mlt
   mixing_length_alpha = 1.9
   MLT_option = 'Henyey'

   use_Ledoux_criterion = .true.
   alpha_semiconvection = 0.01
   thermohaline_coeff = 0
   thermohaline_option = 'Kippenhahn'

   use_other_alpha_mlt = .true. ! implemented in run_star_extras
   x_ctrl(21) = 3.0 ! alpha_H
   x_ctrl(22) = 1.5 ! alpha_other
   x_ctrl(23) = 0.5 ! H_limit 
      ! use alpha_H if cell X >= H_limit; else use alpha_other
   x_ctrl(24) = 9d0 ! mass limit (Msun)
      ! use other_alpfa_mlt only if star_mass >= this limit.

   okay_to_reduce_gradT_excess = .false. 

! mixing
   min_overshoot_q = 0d0

! timesteps
   varcontrol_target = 1d-3
   
   dX_nuc_drop_limit = 5d-2
   dX_nuc_drop_limit_at_high_T = 5d-3 ! for center logT > 9.45
   
   delta_Ye_highT_limit = 1d-3
   
   min_timestep_limit = 1d-12 ! (seconds)

   delta_lgL_He_limit = 0.1 ! limit for magnitude of change in lgL_He

   dX_nuc_drop_max_A_limit = 52
   dX_nuc_drop_min_X_limit = 1d-4
   dX_nuc_drop_hard_limit = 1d99
   
   delta_lgTeff_limit = 0.5  
   delta_lgL_limit = 0.5
   delta_lgRho_cntr_limit = 0.02  

   T_mix_limit = 0

! mesh

! solver

   use_gold2_tolerances = .false.
   use_gold_tolerances = .true.

   use_dedt_form_of_energy_eqn = .true.
   use_dPrad_dm_form_of_T_gradient_eqn = .true.
   
   convergence_ignore_equL_residuals = .true.
   include_composition_in_eps_grav = .true.
   make_gradr_sticky_in_solver_iters = .true.

   eps_nuc_factor = 0
   non_nuc_neu_factor = 0
   
   calculate_Brunt_N2 = .false.

   sig_min_factor_for_high_Tcenter = 0.01
   Tcenter_min_for_sig_min_factor_full_on = 3.2d9
   Tcenter_max_for_sig_min_factor_full_off = 2.8d9

   velocity_logT_lower_bound = 8 
   max_dt_yrs_for_velocity_logT_lower_bound = 0.1

   xa_scale = 1d-5

   fe_core_infall_limit = 1d99 ! cm/sec

   screening_mode = 'extended'
   
   warn_rates_for_high_temp = .false.

! output
   terminal_show_age_units = 'days'
   terminal_show_timestep_units = 'secs'
   terminal_show_log_dt = .false.
   terminal_show_log_age = .false.

   he_core_boundary_h1_fraction = 0.1
   c_core_boundary_he4_fraction = 0.5
   o_core_boundary_c12_fraction = 0.5
   si_core_boundary_o16_fraction = 0.5
   fe_core_boundary_si28_fraction = 0.5


/ ! end of controls namelist


&pgstar

/ ! end of pgstar namelist

&controls

  ! limit max_model_number as part of test_suite
  max_model_number = 15000
  
  ! stella controls

  num_trace_history_values = 7
  trace_history_value_name(1) = 'm_center'
  trace_history_value_name(2) = 'shock_mass'
  trace_history_value_name(3) = 'total_energy'
  trace_history_value_name(4) = 'shock_radius'
  trace_history_value_name(5) = 'photosphere_r'
  trace_history_value_name(6) = 'rel_E_err'
  trace_history_value_name(7) = 'log_rel_run_E_err'

  log_L_upper_limit = 8.8

  use_momentum_outer_BC = .true.

  split_merge_amr_log_zoning = .false.
  split_merge_amr_nz_baseline = 1600
  split_merge_amr_okay_to_split_nz = .false.

  delta_lgL_limit = 0.01


  ! Stopping condition and shock part 
  x_integer_ctrl(1) = 5 ! shock part 
  x_ctrl(16) = 0.05 ! stop when shock reaches this mass below surface

  ! Rescale Ni abundances
  x_ctrl(12) = 1d-15 ! Ni mass to pass into STELLA, in Msun. 
  x_ctrl(35) = -1d+99 ! Simply rescale the Ni distribution
  x_ctrl(36) = -1d+99 ! Simply rescale the Ni distribution
  
  ! Extra Smoothing
  x_integer_ctrl(3) = 3 ! How many boxcar passes for smoothing?
  x_ctrl(45) = 0    ! Boxcar region inner boundary
  x_ctrl(46) = 90   ! Boxcar region outer boundary
  x_ctrl(47) = 0.8  ! Mass width of boxcar


  photo_interval = 25

/ ! end of controls namelist


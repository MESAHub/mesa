! inlist to accrete until an NCO ignition occurs.

&star_job
      show_log_description_at_start = .false.

      load_saved_model = .true.
      saved_model_name = 'before_flash.mod'

      save_model_when_terminate = .true.
      save_model_filename = 'final.mod'
      required_termination_code_string = 'log_center_temp_limit'

      ! Nuclear Reactions
      set_rate_3a = 'FL87' ! Fushiki and Lamb, Apj, 317, 368-388, 1987

      rate_tables_dir = 'tables_hashimoto'
      rate_cache_suffix = 'hashimoto'
      ion_coulomb_corrections = 'PCR2009'
      electron_coulomb_corrections = 'Itoh2002'

      show_net_reactions_info = .true.
      show_net_species_info = .true.

      relax_initial_tau_factor = .true.
      relax_to_this_tau_factor = 300

      set_initial_dt = .true.
      years_for_initial_dt = 1d3

      set_initial_model_number = .true.
      initial_model_number = 0

      set_initial_cumulative_energy_error = .true.
      new_cumulative_energy_error = 0d0

      pgstar_flag = .true.
      save_pgstar_files_when_terminate = .true.

/ !end of star_job namelist

&eos
   !dbg = .true.
   logT_lo = 7.5455
   logT_hi = 7.54559
   mass_fraction_limit_for_PC = 1d-5
/ !end of eos namelist

&kap
  Zbase = 0.02
/ !end of kap namelist

&controls

      use_dedt_form_of_energy_eqn = .true.
      use_gold2_tolerances = .false.
      use_d_eos_dxa = .true.

      num_trace_history_values = 2
      trace_history_value_name(1) = 'rel_E_err'
      trace_history_value_name(2) = 'log_rel_run_E_err'

      ! limit max_model_number as part of test_suite
      max_model_number = 500

      log_center_temp_limit = 7.8

      ! Accretion Controls
      accrete_same_as_surface = .false.
      accrete_given_mass_fractions = .true.
      num_accretion_species = 2
      accretion_species_id(1) = 'he4'
      accretion_species_xa(1) = 0.986987d0 ! 0.99
      accretion_species_id(2) = 'n14'
      accretion_species_xa(2) = 0.012313d0 ! 0.01

      mass_change = 1d-9

      ! A few broad resolution controls
      mesh_delta_coeff = 0.4 !1.2
      max_allowed_nz = 12000
      varcontrol_target = 1d-4

      ! limit timestep based on T and eps_nuc
      ! this helps prevent retries during the runaway
      delta_log_eps_nuc_limit = 0.03
      delta_lgT_cntr_limit = 0.001

      ! limit timestep based on E_err
      limit_for_rel_error_in_energy_conservation = 1d-5
      hard_limit_for_rel_error_in_energy_conservation = 1d-4

      ! Some more specific resolution controls inspired by wd3
      max_center_cell_dq = 1d-6
      max_surface_cell_dq = 1d-8

      delta_lgL_limit = 0.05
      delta_lgL_hard_limit = 0.5

      delta_lgRho_limit = 1
      delta_lgRho_hard_limit = -1

      delta_lgTeff_limit = 0.05
      delta_lgTeff_hard_limit = 0.3

      delta_lgR_limit = 1  !0.05

      ! Don't let strong rates go to zero for any temperature. Also inspired by wd3.
      net_logTcut_lo = 0
      net_logTcut_lim = 0


      ! Controls for output
      photo_interval = 50
      profile_interval = 100
      history_interval = 10
      terminal_interval = 10
      
      write_header_frequency = 10
      
      !photo_interval = 10
      !profile_interval = 1
      !history_interval = 1
      !terminal_interval = 1

! FOR DEBUGGING

      !report_solver_progress = .true. ! set true to see info about solver iterations
      !report_ierr = .true. ! if true, produce terminal output when have some internal error

      !solver_save_photo_call_number = 0
         ! Saves a photo when solver_call_number = solver_save_photo_call_number - 1
         ! e.g., useful for testing partials to set solver_call_number = solver_test_partials_call_number - 1

      !solver_test_partials_k = 1611
      !solver_test_partials_call_number = 264
      !solver_test_partials_iter_number = 18
      !solver_test_partials_dx_0 = 1d-6
      !solver_test_partials_var_name = 'he4' ! 'all' or 'lnd', 'lnT', 'lnR', 'L', 'v', etc.    '' means code sets 
      !solver_test_partials_equ_name = 'lnE' ! 'all' or 'dlnE_dt', 'dlnd_dt', 'dlnR_dt', 'equL', etc   '' means code sets 
         ! equ name can also be 'lnE' or 'lnP' to test eos, 'eps_nuc' to test net, or 'opacity' to test kap.
      !solver_test_partials_sink_name = 'n14' ! iso name to use for "sink" to keep sum = 1
         ! if possible, use he4 as sink so change Y rather than X or Z.
      !solver_test_partials_show_dx_var_name = 'h1'

      !solver_test_partials_write_eos_call_info = .true.
      
      !solver_test_partials_k_low = -1
      !solver_test_partials_k_high = -1
      
      !solver_test_eos_partials = .true.
      !solver_test_kap_partials = .true.
      !solver_test_net_partials = .true.
      !solver_test_atm_partials = .true.

      !report_why_dt_limits = .true.
      !report_all_dt_limits = .true.
      
      !show_mesh_changes = .true.
      !mesh_dump_call_number = 5189
      !okay_to_remesh = .false.
      
      !trace_evolve = .true.

      !stop_for_bad_nums = .true.
      



/ ! end of controls namelist

#!/bin/bash

function error {
	echo
	more diff.txt
	echo
	pwd
	echo "TEST FAILED -- compare test_output to tmp.txt"
	echo
	exit 1
}

function check_okay {
	if [ $? -ne 0 ]
	then
		echo
		pwd
		echo "FAILED"
		echo
		exit 1
	fi
}

if [ ! -f ../skip_build ]
then
	if [ ! -f skip_build ]
	then
  		./mk
  		check_okay
	fi
fi

if [ ! -f ../skip_test ]
then
	if [ ! -f skip_test ]
	then
  		./ck >& diff.txt
  		if [ $? -eq 0 ]
  		then
  			if [ -s diff.txt ]
  			then
  				error
  			fi
  		else
  			error
 		fi
	fi
fi
